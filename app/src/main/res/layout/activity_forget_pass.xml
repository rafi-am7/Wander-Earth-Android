<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ForgetPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:paddingBottom="50dp">

        <ImageView
            android:id="@+id/view_pagerRes"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/we_banner" />

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/view_pagerRes"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logoImage"
            android:layout_marginTop="10dp"
            android:animateLayoutChanges="true">

            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Forget Password"
                android:textColor="@color/error"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/error_message_text_forget_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Registration Failed!"
                android:textColor="#F44336"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/id_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/error_message_text_forget_pass"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:gravity="start"
                android:text="Email"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/editTextLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_heading"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:background="@color/teal_700"
                    android:padding="8dp"
                    android:src="@drawable/outline_perm_identity_white_24" />

                <EditText
                    android:id="@+id/userEmailForgetPass"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg_hollow"
                    android:focusableInTouchMode="true"
                    android:hint="....@mail.com"

                    android:inputType="textEmailAddress"

                    android:padding="10dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/id_password_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextLayout"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:gravity="start"
                android:text="Password"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/editTextLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_password_signin"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:background="@color/teal_700"
                    android:padding="8dp"
                    android:src="@drawable/outline_lock_white_24" />

                <EditText
                    android:id="@+id/userPasswordForgetPass"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg_hollow"
                    android:focusableInTouchMode="true"
                    android:hint="*******"

                    android:inputType="textPassword"

                    android:padding="10dp" />

            </LinearLayout>


            <ProgressBar
                android:id="@+id/marker_progress_forgetpass"
                style="?android:attr/progressBarStyle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:indeterminate="true"
                android:visibility="invisible" />

            <FrameLayout
                android:id="@+id/forgetPassButtonFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/editTextLayout2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_bg_thick"
                android:backgroundTint="@color/colorPrimary">

                <Button
                    android:id="@+id/submitButtonForgetPass"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="Submit"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/llBottomLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/forgetPassButtonFrameLayout"
                android:layout_marginTop="20dp"
                android:animateLayoutChanges="true"
                android:orientation="horizontal"
                tools:visibility="visible">

                <TextView

                    android:id="@+id/signinForgetPass"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnPost"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Sign In"
                    android:textColor="@color/teal_700"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/signUpForgetPass"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text00"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Sign Up"
                    android:textColor="@color/teal_700"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>

</ScrollView>

